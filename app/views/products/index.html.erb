<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td><%= product.price %></td>
        <td><button type="button" class="btn btn-sm btn-info"><%= link_to 'Show', product %></td>
        <td><button type="button" class="btn btn-sm btn-warning"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><button type="button" class="btn btn-sm btn-danger"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path , class:"btn btn-lg btn-success" %>
