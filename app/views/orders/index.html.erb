<p id="notice"><%= notice %></p>
<div class="container">
<h1>Orders</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><button type="button" class="btn btn-sm btn-info"><%= link_to 'Show', order %></td>
        <td><button type="button" class="btn btn-sm btn-warning"><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><button type="button" class="btn btn-sm btn-danger"><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-sm btn-success"><%= link_to 'New Order', new_order_path %>
