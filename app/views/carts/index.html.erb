<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><button type="button" class="btn btn-sm btn-info"><%= link_to 'Show', cart %></td>
        <td><button type="button" class="btn btn-sm btn-warning"><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><button type="button" class="btn btn-sm btn-danger"><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cart', new_cart_path %>
