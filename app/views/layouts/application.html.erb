<!DOCTYPE html>
<html>
  <head>
    <title>Depot</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  
  </head>

 <body class=class='<%= controller.controller_name %>'>
    <div class="page-header">
      <h2>Depot</h2>
    </div>
    <nav class="navbar navbar-default">
      <ul <ul class="nav nav-pills">
        <li><a href="/static_pages/home">Home</a></li>
        <li><a href="/">Products</a></li>
        <li><a href="/static_pages/help">Help</a></li>
        <li><a href="/static_pages/ads">Ads</a></li>
        
      <li><%= button_to 'Login', login_path, method: :create , class:"btn btn-success" %></li>
         <% if session[:user_id] %>
         <li><%= link_to 'Orders', orders_path %></li>
         <li><%= link_to 'Products', products_path %></li>
         <li><%= link_to 'Users', users_path %></li>
         <li><button type="button" class="btn btn-danger"><%= link_to 'Logout', logout_path, method: :delete %></li>
      </ul>
   
      <% end %>  
    <%= yield %>
 
  </body>
  
</html>
